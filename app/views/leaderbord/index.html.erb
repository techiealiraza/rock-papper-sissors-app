<div class="bg-background-image min-h-screen flex flex-col justify-between">
  <%= link_to 'Back', request.referer || root_path , class: "text-gold font-black hover:text-gold_shade2"%>
  <div class="py-20 flex flex-row items-center justify-evenly ">
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg"></div>
    <h1 class="text-orange-200"> </h1>
    <table class="w-full text-sm text-left text-black mx-5">
      <thead class="text-lg bg-gold_shade2 items-center">
        <tr>
          <th>No</th>
          <th>Player</th>
          <th>Matches Played</th>
          <th>Matches Won</th>
          <th>Tournaments won</th>
        </tr>
      </thead>
      <tbody class="bg-gold text-lg">
        <% adjusted_index = @matches.current_page * 5 - 4 %>
        <% @users.each_with_index do |match, index| %>
          <tr>
            <td class="px-6 py-3"><%= adjusted_index %></td>
            <td class="px-6 py-3"><%= users.name %></td>
            <td class="px-6 py-3"><%= user.total_matches_played %></td>
            <td class="px-6 py-3"><%= user.total_matches_won %></td>
            <td class="px-6 py-3"><%= user.total_tournaments_won %></td>
          </tr>
          <% adjusted_index = adjusted_index + 1 %>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class = "pb-20 flex flex-row items-center justify-center">
    <div class=" bg-gold rounded py-3 px-5 mx-5 flex flex-row justify-between">
      <div class="btn-group">
        <%= paginate @matches, window: 1, outer_window: 2 %>
      </div>
    </div>
  </div>
</div>
