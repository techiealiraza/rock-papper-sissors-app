var noticeElement = document.getElementById('message-flash-container');
<% if flash[:error].present? %>
  noticeElement.classList.add('bg-red-600');
<% end %>
noticeElement.textContent = "<%= flash[:notice] || flash[:error] %>";
noticeElement.style.display = 'block';

setTimeout(function() {
  noticeElement.style.display = 'none';
}, 3000);
