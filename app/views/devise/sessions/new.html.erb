<div class="bg-background-image min-h-screen flex flex-col">
  <div
    class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2"
  >
    <div
      class="bg-white bg-opacity-20 backdrop-blur-lg rounded drop-shadow-lg px-6 py-8 text-black w-full"
    >
      <h1 class="mb-8 text-3xl text-center text-white">Sign in</h1>

      <%= form_for(resource, as: resource_name, url:session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages" , resource: resource %>




      <div class="field">
        <%= f.label :email, class: "text-white" %> <%= f.email_field :email,
        autofocus: true, autocomplete: "email" , class: "border border-gold w-full rounded pt-3 mb-3" %>
      </div>
      <!-- <input
          type="text"
          class="block border border-grey-light w-full pt-3 rounded mb-4 border-gold"
          name="email"
          placeholder="Email"
        /> -->

      <div
        class="py-1 flex flex-row space-x-20 items-center justify-center border border-gold rounded bg-white mb-3"
        x-data="app"
      >
        <div data-controller="pass">
          <input
            type="radio"
            name="option"
            id="1"
            class="peer hidden"
            data-action="click->pass#password"
          />
          <label
            for="1"
            class="px-7 block cursor-pointer select-none rounded-xl p-2 text-center peer-checked:bg-gold peer-checked:text-black"
            >Password</label
          >
        </div>

        <div data-controller="pass">
          <input
            type="radio"
            name="option"
            id="2"
            class="peer hidden"
            data-action="click->pass#otp"
            checked
          />
          <label
            for="2"
            class="text-black px-7 block cursor-pointer select-none rounded-xl p-2 text-center peer-checked:bg-gold peer-checked:text-black"
          >
            OTP
          </label>
        </div>
      </div>
      <div>
        <%= f.label :password, class: "text-white" %> 
        <%= f.password_field :password, autocomplete: "current-password" , class: "border border-gold w-full rounded mb-3 py-3" %>
      </div>

      <div class="flex flex-row items-center justify-center ">
        <div class="actions mb-4 px-10 py-3 btn-brown">
          <%= f.submit "Sign in" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
